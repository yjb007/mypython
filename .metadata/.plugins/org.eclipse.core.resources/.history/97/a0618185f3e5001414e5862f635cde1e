#! /usr/bin/env python
#_*_ coding:utf-8 _*_

import MySQLdb

class MysqlHelper(object):
    
    def __init__(self):
        pass
    
    def Get_Dict(self,sql,params):
        
        conn = MySQLdb.connect(host = '10.0.18.1',user='root',passwd='123456',db='teacher');  
        cur = conn.cursor(cursorclass = MySQLdb.cursors.DictCursor)

        reCount = cur.execute(sql,params)
        data = cur.fetchall()
        
        cur.close()
        conn.close()
        return data
        
    def Get_One(self,sql,params):
        
        conn = MySQLdb.connect(host = '10.0.18.1',user='root',passwd='123456',db='teacher');  
        cur = conn.cursor(cursorclass = MySQLdb.cursors.DictCursor)

        reCount = cur.execute(sql,params)
        data = cur.fetchone()
        
        cur.close()
        conn.close()
        return data
    
helper = MysqlHelper()
sql = 'select id,name,age from userinfo where id = %s;'
params = (5,)
print helper.Get_Dict(sql, params)
print helper.Get_One(sql, params)


        
        
        
        
        
        
        
        
        